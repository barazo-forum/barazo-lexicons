{
  "name": "@barazo-forum/lexicons",
  "version": "0.1.1",
  "description": "AT Protocol lexicon schemas and generated TypeScript types for the Barazo forum platform",
  "type": "module",
  "packageManager": "pnpm@10.29.2",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barazo-forum/barazo-lexicons.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "lexicons"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:compat": "vitest run tests/backward-compatibility.test.ts",
    "test:coverage": "vitest run --coverage",
    "generate": "lex gen-server ./src/generated ./lexicons/**/*.json && node scripts/fixup-generated.js",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@atproto/lexicon": "^0.6.1",
    "multiformats": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.9.8",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
